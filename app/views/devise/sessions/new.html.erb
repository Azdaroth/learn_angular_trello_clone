<div class="container-fluid" id="log-in">

  <div class="row">
    <div class="col-lg-9">

      <h2 class="col-lg-offset-5">Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, wrapper: "vertical_boolean", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          
            <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
          
        </div>
      <% end %>
  
      <%= render "devise/shared/links" %>      

    </div>
  </div>
</div>