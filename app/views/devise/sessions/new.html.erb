<div class="container-fluid" id="log-in">

  <div class="row">
    <div class="col-lg-9">

      <h2 class="col-lg-offset-5">Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: "bootstrap3_horizontal") do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label_html: { class: "col-lg-2" }  %>
          <%= f.input :password, required: false, label_html: { class: "col-lg-2" } %>
          <%= f.input :remember_me, wrapper: "checkbox", wrapper_html: { class: "col-lg-offset-2" }, label_html: { class: "col-lg-2" }, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <div class='col-lg-offset-2 col-lg-10'>
            <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>

      <div class='container'>
        <div class='col-lg-offset-1 col-lg-10'>
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
</div>